<Comp>:
    orientation: 'vertical'
    padding: [40, 20]
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 1, 1  # Light background color
        Rectangle:
            pos: self.pos
            size: self.size
            
    Label:
        text: 'Insira os seguintes dados:'
        font_size: 40
        color: 0.2, 0.4, 0.6, 1  # Darker text color
        text_size: self.size
    BoxLayout:
    Label:
        text: 'Nome Volunt√°rio'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: name
        hint_text: "Digite o nome"
        background_color: 0.95, 0.95, 1, 1
        multiline: False
        input_filter: 'float'
    Label:
        text: 'Sexo'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: sex
        hint_text: "Digite o sexo"
        background_color: 0.95, 0.95, 1, 1
        multiline: False
        input_filter: 'float'
    Label:
        text: 'Idade'
        hint_text: "Digite a idade"
        input_filter: 'int'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: age
        hint_text: "Digite a idade"
        background_color: 0.95, 0.95, 1, 1
        input_filter: 'int'
        multiline: False
        input_filter: 'float'
    Label:
        text: 'Etnia'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: ethnicity
        hint_text: "Digite a etnia"
        background_color: 0.95, 0.95, 1, 1
        input_filter: 'int'
        multiline: False
        input_filter: 'float'
    Label:
        text: 'Altura (cm)'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: hight
        hint_text: "Digite a altura"
        background_color: 0.95, 0.95, 1, 1
        multiline: False
        input_filter: 'float'
    Label:
        text: 'Peso (gramas)'
        font_size: 24
        color: 0, 0, 0.5, 1
    TextInput:
        id: weight
        hint_text: "Digite o peso"
        multiline: False
        input_filter: 'float'

    Button:
        text: "Enviar"
        font_size: 24
        size_hint_y: None
        height: 60
        background_color: 0.3, 0.6, 1, 1
        on_press: app.submit_data()
